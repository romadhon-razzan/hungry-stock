<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.onboarding.fragments.PageOneFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/large"
        android:paddingBottom="@dimen/large1"
        android:paddingStart="@dimen/normal2"
        android:paddingEnd="@dimen/normal2"
        tools:background="@color/background">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/secondary"
            app:cardCornerRadius="14dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="24dp"
                android:paddingBottom="24dp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/lbl_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="22dp"
                    android:gravity="center"
                    android:fontFamily="@font/coolvetica"
                    android:text="@string/kenali_lebih_lanjut_tentang_program_di_hungrystock"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/font_medium" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/card_annual_fee"
                    android:layout_below="@id/lbl_title" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_annual_fee"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="8dp"
                    app:strokeColor="#231F2033"
                    app:strokeWidth="1dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/normal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_more_info"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ft_barlow_medium"
                            android:gravity="center|start"
                            android:text="Informasi dan registrasi sebagai member, lebih lanjut bisa melalui www.hungrystock.com/membership"
                            android:textColor="@color/dark"
                            android:textSize="@dimen/font_normal" />

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>


</layout>
