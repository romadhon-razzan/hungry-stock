<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/container"
        style="@style/LayoutMatchParent"
        tools:context=".ui.cocktail.CocktailListFragment">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="@dimen/medium"
            app:cardCornerRadius="@dimen/radius_normal"
            app:cardElevation="@dimen/elevation_normal">

            <RelativeLayout
                style="@style/LayoutMatchParent">
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/et_search_by_name"
                    style="@style/LayoutMatchParent"
                    android:paddingStart="@dimen/medium"
                    android:paddingEnd="@dimen/medium"
                    android:background="@color/transparent"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawablePadding="@dimen/normal"
                    android:hint="@string/label_search_your_drink"/>
            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            style="@style/LayoutMatchWrapParent"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/ProgressBar"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
</layout>