<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.onboarding.fragments.PageOneFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/background"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bt_book_1"
                android:layout_width="0dp"
                android:layout_height="143dp"
                android:layout_marginTop="85dp"
                android:layout_weight="1"
                android:src="@drawable/book_1" />

            <ImageView
                android:id="@+id/bt_book_2"
                android:layout_width="0dp"
                android:layout_height="143dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:src="@drawable/book_2" />

            <ImageView
                android:id="@+id/bt_book_3"
                android:layout_width="0dp"
                android:layout_height="143dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:src="@drawable/book_3" />

            <ImageView
                android:id="@+id/bt_book_4"
                android:layout_width="0dp"
                android:layout_height="143dp"
                android:layout_weight="1"
                android:src="@drawable/book_4" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="143dp"
                android:layout_marginTop="85dp" />

            <ImageView
                android:id="@+id/bt_book_5"
                android:layout_width="0dp"
                android:layout_height="143dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:src="@drawable/book_5" />

            <ImageView
                android:id="@+id/bt_book_6"
                android:layout_width="0dp"
                android:layout_height="143dp"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:src="@drawable/book_6" />

            <ImageView
                android:id="@+id/bt_book_7"
                android:layout_width="0dp"
                android:layout_height="143dp"
                android:layout_weight="1"
                android:src="@drawable/book_7" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="143dp"
                android:layout_marginTop="85dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="@dimen/small"
            android:fontFamily="@font/coolvetica"
            android:text="@string/books_to_read"
            android:textColor="@color/white"
            android:textSize="@dimen/font_large" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="@dimen/normal"
            android:fontFamily="@font/barlow_medium"
            android:text="@string/learn_to_earn_together"
            android:textColor="@color/white"
            android:textSize="@dimen/font_small" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/bt_login_register"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="@dimen/large1"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/secondary">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/barlow_semibold"
                android:textColor="@color/dark"
                android:textSize="@dimen/font_medium"
                android:text="@string/button_login_register"/>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</layout>
