            android:name=".ui.video_player.VideoPlayerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.privacy_police.PrivacyPoliceActivity"
            android:exported="false" />
        <activity
            android:name=".ui.watchlist.DetailWatchListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true" />
        <activity
            android:name=".ui.general.auth.AuthActivity"
            android:exported="true" />
        <activity
            android:name=".ui.splashscreen.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.reference.ReferenceLayoutActivity"
            android:exported="true" />

        <meta-data
            android:name="com.onesignal.NotificationServiceExtension"
            android:value="id.co.ptn.hungrystock.notification.NotificationServiceExtension" />
    </application>

</manifest>